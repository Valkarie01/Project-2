{% layout 'layout.liquid' %}

{% block content %}

<div class="container-md">
    <form action="/users/login" method="POST">
        <fieldset>
            <legend>Welcome Back! Nice to see you again</legend>
            <label class="form-label">Username:</label>
            <input 
                type="text" 
                name="username" 
                class="form-control"
            >
            <label class="form-label">Password:</label>
            <input 
                type="password" 
                name="password" 
                class="form-control"
            >
        </fieldset>
        <input 
            type="submit" 
            value="Log in" 
            class="btn btn-dark"
        >
    </form>
</div>

{% endblock %}